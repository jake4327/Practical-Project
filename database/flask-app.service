[Unit]
Description=Flask Application
[Service]
User=pythonadm
WorkingDirectory=/opt/flask-app
ExecStart=/bin/bash \
	-c 'cd /opt/flask-app && \
	source ./venv/bin/activate && \
	python ./app.py'
Environment=SECRET_KEY=password
Environment=DATABASE_URI=mysql+pymysql://jake:password@mysql/people
[Install]
WantedBy=multi-user.target


