apiVersion: v1
kind: Pod
metadata:
  name: mypod
  labels:
    app: webserver
spec:
  containers:
    - name: nginx
      image: nginx:latest
      resources:
        requests:
          memory: "128Mi" # 128Mi = 128 mebibytes
          cpu: "500m"     # 500m = 500 milliCPUs (1/2 CPU)
        limits:
          memory: "128Mi"
          cpu: "500m"
      ports:
        - containerPort: 80

    - name: frontend
      image: jstoneqa/sfia-2-jenkins_frontend
      resources:
       requests:
          memory: "128Mi" # 128Mi = 128 mebibytes
           cpu: "500m"     # 500m = 500 milliCPUs (1/2 CPU)
        limits:
         memory: "128Mi"
         cpu: "500m"
      ports:
       - containerPort: 5000

    - name: backend
      image: jstoneqa/sfia-2-jenkins_backend
      resources:
        requests:
          memory: "128Mi" # 128Mi = 128 mebibytes
          cpu: "500m"     # 500m = 500 milliCPUs (1/2 CPU)
        limits:
          memory: "128Mi"
          cpu: "500m"
      ports:
        - containerPort: 5001
      env:
        - name: DATABASE_URI
          value: mysql+pymysql://root:password@database:3306/users
        - name: TEST_DATABASE_URI
          value: mysql+pymysql://root:password@database:3306/testdb

    - name: database
      image: jstoneqa/sfia-2-jenkins_database
      resources:
        requests:
          memory: "128Mi" # 128Mi = 128 mebibytes
          cpu: "500m"     # 500m = 500 milliCPUs (1/2 CPU)
        limits:
          memory: "128Mi"
          cpu: "500m"
      ports:
        - containerPort: 3306
      env:
        - name: DATABASE_URI
          value: mysql+pymysql://root:password@database:3306/users
        - name: MYSQL_ROOT_PASSWORD
          value: password